<div class="index-page">
  <h1 class="show-header"><%= @usergroup.name %></h1>

  <div class="group-members">
     <h4>Group Members</h4>

         <% @memberships.each do |member| %>
           <li><%= member.name  %>
             <% if current_user.preferences.empty? %>
                 (This user has not submitted their preferences.)
               <% else %>
                 (This user has submitted their prefences.)
             <% end %>
           </li>
         <% end %>
         <br>

         <%= link_to "Invite New User to Group", new_invite_path, class:"generic-buttons" %>
    </div>
<br>
<br>

  <% if @ready == false %>
    <%= render 'preferencesform' %>
  <% end %>

  <div id="app"> </div>



</div>

<%= image_tag href="https://static.pexels.com/photos/6267/menu-restaurant-vintage-table.jpg", class:"welcome-image" %>
