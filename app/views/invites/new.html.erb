<div class="no-top-padding">
  <%= form_for @invite , :url => invites_path do |f| %>
    <div class="field">
      <%= f.hidden_field :user_group_id, :value => @invite.user_group_id %>
      <%= f.label :email %>
      <%= f.email_field :email %>
      <%= f.submit 'Send' %>
    </div>
  <% end %>
</div>
